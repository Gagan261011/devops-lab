# Example terraform.tfvars
# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
aws_region     = "us-east-1"
key_pair_name  = "my-aws-keypair"

# Security - Get your IP with: curl ifconfig.me
my_ip          = "1.2.3.4/32"

# Repository - Replace with your GitHub repo URL
github_repo    = "https://github.com/YOUR_USERNAME/devops-lab.git"

# Optional Customizations
project_name   = "devops-lab"
instance_type  = "t3.medium"

# Leave empty for auto-lookup of latest Ubuntu 22.04 AMI
ubuntu_ami     = ""
